{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/getoutreach/extensibility-sdk/docs/schema/2.0/manifest.schema.json",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "identifier": {
      "type": "string",
      "maxLength": 128,
      "pattern": "^[a-z0-9][a-z0-9-_]+[a-z0-9]$"
    },
    "store": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "author": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "company": {
              "type": "string"
            },
            "email": {
              "type": "string",
              "format": "email"
            },
            "privacyUrl": {
              "type": "string",
              "format": "uri"
            },
            "supportUrl": {
              "type": "string",
              "format": "uri"
            },
            "termsOfUseUrl": {
              "type": "string",
              "format": "uri"
            },
            "websiteUrl": {
              "type": "string",
              "format": "uri"
            }
          }
        },
        "categories": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "account_based_marketing",
              "chat",
              "conversation_intelligence",
              "crm",
              "direct_mail",
              "inbox",
              "integration_platform",
              "marketing",
              "privacy_security",
              "sales_assets_management",
              "sales_intelligence_data",
              "sales_productivity",
              "video",
              "voice"
            ]
          },
          "uniqueItems": true
        },
        "description": {
          "type": "object",
          "properties": {
            "en": {
              "type": "string"
            }
          },
          "required": ["en"]
        },
        "headline": {
          "type": "object",
          "properties": {
            "en": {
              "type": "string"
            }
          },
          "required": ["en"]
        },
        "iconUrl": {
          "type": "string",
          "format": "uri"
        },
        "locales": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "medias": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "title": {
                "type": "string"
              },
              "type": {
                "type": "string",
                "enum": ["image", "video"]
              },
              "url": {
                "type": "string",
                "format": "uri"
              }
            }
          }
        },
        "title": {
          "type": "object",
          "properties": {
            "en": {
              "type": "string"
            }
          },
          "required": ["en"]
        },
        "version": {
          "type": "string",
          "pattern": "^[0-9]+(\\.[0-9]+)?$",
          "maxLength": 64
        }
      },
      "required": ["title"]
    },
    "webhook": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "url": {
          "type": "string",
          "format": "uri"
        },
        "events": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["INSTALL", "UNINSTALL", "SETUP"]
          },
          "minItems": 1,
          "uniqueItems": true
        }
      },
      "required": ["url", "events"]
    },
    "api": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "scopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "uniqueItems": true
        },
        "scopesAll": {
          "type": "boolean"
        },
        "redirectUris": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "clientId": {
          "type": "string"
        }
      },
      "anyOf": [
        {
          "required": ["scopesAll", "redirectUris"]
        },
        {
          "required": ["scopes", "redirectUris"]
        }
      ]
    },
    "apiS2S": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "scopes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "guid": {
          "type": "string",
          "format": "uuid"
        },
        "publicKeys": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "name": {
                "type": "string"
              },
              "value": {
                "type": "string"
              }
            }
          },
          "minItems": 1,
          "uniqueItems": true
        }
      },
      "required": ["scopes", "publicKeys"]
    },
    "externalInstallationUrl": {
      "type": "string",
      "format": "uri"
    },
    "externalSetupUrl": {
      "type": "string",
      "format": "uri"
    },
    "disableTimeoutMonitoring": {
      "type": "boolean"
    },
    "configuration": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "key": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["number", "date", "url", "options", "select", "string"]
          },
          "required": {
            "type": "boolean"
          },
          "urlInclude": {
            "type": "boolean"
          },
          "text": {
            "type": "object",
            "properties": {
              "en": {
                "type": "string"
              }
            }
          },
          "defaultValue": {
            "type": "string"
          },
          "validator": {
            "type": "string"
          },
          "options": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "text": {
                  "type": "object",
                  "properties": {
                    "en": {
                      "type": "string"
                    }
                  }
                },
                "value": {
                  "type": "string"
                }
              }
            }
          }
        },
        "required": ["key", "type", "text"]
      }
    },
    "extensions": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "type": {
                "type": "string",
                "enum": ["content-editor"]
              },
              "context": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "uniqueItems": true
              },
              "host": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "url": {
                    "type": "string",
                    "format": "uri-template"
                  },
                  "icon": {
                    "type": "string",
                    "format": "uri"
                  }
                },
                "required": ["url"]
              },
              "identifier": {
                "type": "string",
                "pattern": "^[a-z0-9][a-z0-9-_]+[a-z0-9]$",
                "maxLength": 128
              },
              "settings": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "recommended": {
                    "type": "array",
                    "minLength": 1,
                    "items": {
                      "type": "object",
                      "additionalProperties": false,
                      "properties": {
                        "width": {
                          "type": "number"
                        },
                        "height": {
                          "type": "number"
                        }
                      },
                      "required": ["width", "height"]
                    }
                  }
                },
                "required": ["recommended"]
              }
            },
            "required": ["type", "host", "identifier", "settings"]
          },
          {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "type": {
                "type": "string",
                "enum": ["data-mailing-links"]
              },
              "filter": {
                "type": "string"
              },
              "host": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "url": {
                    "type": "string",
                    "format": "uri-template"
                  }
                },
                "required": ["url"]
              },
              "identifier": {
                "type": "string",
                "pattern": "^[a-z0-9][a-z0-9-_]+[a-z0-9]$",
                "maxLength": 128
              }
            },
            "required": ["type", "host", "identifier"]
          },
          {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "data-account-events",
                  "data-opportunity-events",
                  "data-prospect-events"
                ]
              },
              "identifier": {
                "type": "string",
                "pattern": "^[a-z0-9][a-z0-9-_]+[a-z0-9]$",
                "maxLength": 128
              },
              "template": {
                "type": "object",
                "properties": {
                  "en": {
                    "type": "string"
                  }
                },
                "required": ["en"]
              },
              "title": {
                "type": "object",
                "properties": {
                  "en": {
                    "type": "string"
                  }
                },
                "required": ["en"]
              }
            },
            "required": ["type", "template", "title", "identifier"]
          },
          {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "type": {
                "type": "string",
                "enum": ["shell-application"]
              },
              "context": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "uniqueItems": true
              },
              "host": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "url": {
                    "type": "string",
                    "format": "uri-template"
                  },
                  "icon": {
                    "type": "string",
                    "format": "uri"
                  }
                },
                "required": ["url"]
              },
              "identifier": {
                "type": "string",
                "pattern": "^[a-z0-9][a-z0-9-_]+[a-z0-9]$",
                "maxLength": 128
              }
            },
            "required": ["type", "host", "identifier"]
          },
          {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "tab-account",
                  "tab-opportunity",
                  "tab-prospect",
                  "tab-reports"
                ]
              },
              "context": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "uniqueItems": true
              },
              "fullWidth": {
                "type": "boolean"
              },
              "host": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "url": {
                    "type": "string",
                    "format": "uri-template"
                  }
                },
                "required": ["url"]
              },
              "identifier": {
                "type": "string",
                "pattern": "^[a-z0-9][a-z0-9-_]+[a-z0-9]$",
                "maxLength": 128
              }
            },
            "required": ["type", "host", "identifier"]
          },
          {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "type": {
                "type": "string",
                "enum": ["tile-account", "tile-opportunity", "tile-prospect"]
              },
              "context": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "description": {
                "type": "object",
                "properties": {
                  "en": {
                    "type": "string"
                  }
                },
                "required": ["en"]
              },
              "host": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "url": {
                    "type": "string",
                    "format": "uri-template"
                  },
                  "component": {
                    "type": "string"
                  }
                }
              },
              "identifier": {
                "type": "string",
                "pattern": "^[a-z0-9][a-z0-9-_]+[a-z0-9]$",
                "maxLength": 128
              },
              "settings": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "recommended": {
                    "type": "array",
                    "minLength": 1,
                    "items": {
                      "type": "object",
                      "additionalProperties": false,
                      "properties": {
                        "width": {
                          "type": "number"
                        },
                        "height": {
                          "type": "number"
                        }
                      },
                      "required": ["width", "height"]
                    }
                  }
                },
                "required": ["recommended"]
              },
              "title": {
                "type": "object",
                "properties": {
                  "en": {
                    "type": "string"
                  }
                },
                "required": ["en"]
              }
            },
            "required": ["type", "host", "identifier"]
          }
        ]
      }
    }
  },
  "required": ["identifier", "store"]
}
