{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/getoutreach/extensibility-sdk/main/docs/schema/2.0/opdpManifest.schema.json",
  "additionalProperties": false,
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[\\p{L}\\p{N}\\p{Z}\\p{P}]+$",
      "description": "Name of the provider."
    },
    "baseURL": {
      "type": "string",
      "pattern": "^https://[a-zA-Z0-9-]+\\.[a-zA-Z0-9-/.]+/opdp/v0\\.9$",
      "description": "Base URL of the provider."
    },
    "authentication": {
      "type": "object",
      "properties": {
        "apiKey": {
          "type": "object",
          "properties": {
            "header": {
              "type": "string",
              "pattern": "^[_0-9A-Za-z-]+$",
              "description": "Header name for API key authentication."
            }
          },
          "required": ["header"]
        }
      },
      "required": ["apiKey"]
    },
    "endpoints": {
      "type": "object",
      "properties": {
        "associate": {
          "type": "object",
          "properties": {
            "prospects": {
              "type": "object",
              "properties": {
                "maxPerCall": {
                  "type": "integer",
                  "minimum": 1,
                  "description": "Maximum number of prospects per call."
                }
              },
              "required": ["maxPerCall"]
            },
            "accounts": {
              "type": "object",
              "properties": {
                "maxPerCall": {
                  "type": "integer",
                  "minimum": 1,
                  "description": "Maximum number of accounts per call."
                }
              },
              "required": ["maxPerCall"]
            }
          }
        },
        "enrich": {
          "type": "object",
          "properties": {
            "accountDataGroups": {
              "type": "object",
              "additionalProperties": {
                "type": "object",
                "properties": {
                  "providedData": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "enum": [
                        "firmographics",
                        "techStack",
                        "competitors",
                        "leadership",
                        "departments",
                        "jobPostings",
                        "ipo",
                        "fundingRounds",
                        "acquisitions",
                        "investmentsMade",
                        "plStatements",
                        "linkedInPosts",
                        "xPosts",
                        "blogPosts",
                        "newsArticles"
                      ]
                    },
                    "minItems": 1,
                    "description": "List of provided account data kinds."
                  },
                  "maxPerCall": {
                    "type": "integer",
                    "minimum": 1,
                    "description": "Maximum number of accounts per call for this group."
                  }
                },
                "required": ["providedData", "maxPerCall"]
              }
            },
            "prospectDataGroups": {
              "type": "object",
              "additionalProperties": {
                "type": "object",
                "properties": {
                  "providedData": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "enum": [
                        "demographics",
                        "emailAddresses",
                        "phoneNumbers",
                        "education",
                        "employment",
                        "xPosts",
                        "linkedInPosts",
                        "youtubeAppearances",
                        "podcastAppearances",
                        "blogPosts"
                      ]
                    },
                    "minItems": 1,
                    "description": "List of provided prospect data kinds."
                  },
                  "maxPerCall": {
                    "type": "integer",
                    "minimum": 1,
                    "description": "Maximum number of prospects per call for this group."
                  }
                },
                "required": ["providedData", "maxPerCall"]
              }
            },
            "accountEnrichmentTypes": {
              "type": "object",
              "properties": {
                "firmographics": {
                  "type": "object",
                  "properties": {
                    "supportedFields": {
                      "type": "array",
                      "items": {
                        "type": "string",
                        "enum": [
                          "name",
                          "domain",
                          "description",
                          "websiteUrl",
                          "linkedInUrl",
                          "twitterUrl",
                          "youtubeUrl",
                          "address",
                          "isoCountryCode",
                          "isoSubdivisionCode",
                          "phoneNumber",
                          "companyType",
                          "naicsCodes",
                          "sicCodes",
                          "primaryIndustry",
                          "foundedDate",
                          "stockTicker",
                          "annualRevenue",
                          "numberOfEmployees"
                        ]
                      },
                      "minItems": 1
                    }
                  },
                  "required": ["supportedFields"]
                }
              }
            },
            "prospectEnrichmentTypes": {
              "type": "object",
              "properties": {
                "demographics": {
                  "type": "object",
                  "properties": {
                    "supportedFields": {
                      "type": "array",
                      "items": {
                        "type": "string",
                        "enum": [
                          "firstName",
                          "lastName",
                          "middleName",
                          "gender",
                          "dateOfBirth",
                          "address",
                          "isoCountryCode",
                          "isoSubdivisionCode",
                          "skills",
                          "interests",
                          "linkedInUrl",
                          "twitterUrl",
                          "facebookUrl"
                        ]
                      },
                      "minItems": 1
                    }
                  },
                  "required": ["supportedFields"]
                }
              }
            }
          }
        },
        "identify": {
          "type": "object",
          "properties": {
            "accountFilters": {
              "type": "object",
              "properties": {
                "country": {"type": "object"},
                "countrySubdivision": {"type": "object"},
                "location": {"type": "object"},
                "numberOfEmployees": {"type": "object"},
                "annualRevenue": {"type": "object"},
                "age": {"type": "object"},
                "industry": {
                  "type": "object",
                  "properties": {
                    "supportedTaxonomies": {
                      "type": "array",
                      "items": {"type": "string"}
                    }
                  }
                },
                "companyType": {
                  "type": "object",
                  "properties": {
                    "supportedValues": {
                      "type": "array",
                      "items": {"type": "string"}
                    }
                  }
                }
              }
            },
            "prospectFilters": {
              "type": "object",
              "properties": {
                "country": {"type": "object"},
                "countrySubdivision": {"type": "object"},
                "location": {"type": "object"},
                "department": {
                  "type": "object",
                  "properties": {
                    "supportedValues": {
                      "type": "array",
                      "items": {"type": "string"}
                    }
                  }
                },
                "seniority": {
                  "type": "object",
                  "properties": {
                    "supportedValues": {
                      "type": "array",
                      "items": {"type": "string"}
                    }
                  }
                },
                "yearsOfExperience": {"type": "object"},
                "timeInRole": {"type": "object"},
                "emailAvailability": {"type": "object"},
                "phoneAvailability": {"type": "object"},
                "linkedInAvailability": {"type": "object"},
                "accountIds": {"type": "object"}
              }
            }
          }
        },
        "whoami": {"type": "object"}
      }
    }
  },
  "required": ["name", "baseURL", "authentication", "endpoints"]
}
